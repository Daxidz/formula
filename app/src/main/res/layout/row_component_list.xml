<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle"
    android:weightSum="1">


    <LinearLayout
        android:clickable="true"
        android:id="@+id/textArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/stroke_width"
        android:layout_marginLeft="@dimen/stroke_width"
        android:layout_marginTop="@dimen/stroke_width"
        android:layout_weight="0.4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:textColor="#606060"
            android:textSize="18dp" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="4dp"
            android:background="@color/gray_border" />

        <TextView
            android:id="@+id/formula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="7dp"
            android:gravity="center_vertical"
            android:textColor="#606060"
            android:textSize="18dp" />

    </LinearLayout>

    <View
        android:layout_width="@dimen/stroke_width"
        android:layout_height="match_parent"
        android:background="@color/gray_border" />

    <TextView
        android:clickable="true"
        android:id="@+id/tag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/stroke_width"
        android:layout_marginRight="@dimen/stroke_width"
        android:layout_marginTop="@dimen/stroke_width"
        android:layout_weight="0.6"
        android:gravity="center"
        android:textColor="#606060" />

</LinearLayout>